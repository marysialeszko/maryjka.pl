<!-- Footer -->
<footer>
  <div class="container">
    <div class="row">
      <div class="col-sm-3 footer-box wow fadeInUp">
	<h4>O mnie</h4>
	<div class="footer-box-text">
	  <p>
	    W budowie.
	  </p>
	  <p><%= link_to "Więcej", about_path %></p>
	</div>
      </div>
      <div class="col-sm-3 footer-box wow fadeInDown">
	<%= render 'subscribers/index'  %>
      </div>
      <div class="col-sm-3 footer-box wow fadeInUp">
	<h4>Instagram</h4>
	<div class="footer-box-text instagram-feed">
	  <% @instagram.each do |instagram| %>
	  <%= link_to image_tag(instagram.images.low_resolution.url), instagram.link  %>
	  <% end %>
	</div>
      </div>
      <div class="col-sm-3 footer-box wow fadeInDown">
	<h4>Kontakt</h4>
	<div class="footer-box-text footer-box-text-contact">
	  <p><i class="fa fa-map-marker"></i> Adres</p>
	  <p><i class="fa fa-phone"></i> Telefon</p>
	  <p><i class="fa fa-user"></i> Skype</p>
	  <p><i class="fa fa-envelope"></i> Email</p>
	</div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 wow fadeIn">
	<div class="footer-border"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-7 footer-copyright wow fadeIn">
	&copy; <%= copyright_notice_year_range(2017) %> <%= link_to "Maryjka.pl", "#" %>  Wszelkie prawa zatrzeżone.<br/>
	Szablon dzięki <a href="http://azmind.com/free-bootstrap-themes-templates/">Azmind</a>.
      </div>
      <div class="col-sm-5 footer-social wow fadeIn">
	<a href="#"><i class="fa fa-facebook"></i></a>
	<a href="#"><i class="fa fa-dribbble"></i></a>
	<a href="#"><i class="fa fa-twitter"></i></a>
	<a href="#"><i class="fa fa-pinterest"></i></a>
      </div>
    </div>
  </div>
</footer>
